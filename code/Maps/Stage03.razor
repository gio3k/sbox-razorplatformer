	<MapChanger style="top: 656px; left: 83%; position: absolute" map="Stage04" static></MapChanger>
	
	<Player style="left: 250px; top: 750px"></Player>
	
	<!-- Danger -->
	<MapChanger class="danger" style="
		top: 706px; left: 680px;
		width: 700px; height: 50px;
		position: absolute;
	" map="Stage03" static></MapChanger>

