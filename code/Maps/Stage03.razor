	<Actor class="wall" style="
		top: 550px; left: 250px; 
		width: 150px; height: 20px;
	" static></Actor>
	
	<!-- Danger text -->
    <div style="
        flex-direction: column; 
        
        position: absolute; 
        
        top: 11%; left: -370px; 
        
        width: 100%; height: 80%;
        
        transform: rotateZ(90deg);
