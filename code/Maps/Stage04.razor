@namespace Platformer.Maps
@using Platformer.Core
@using Sandbox.UI
@inherits Map
@attribute [StyleSheet( "/Maps/Stage04.scss" )]

<root>
	<MapChanger style="top: 376px; left: 82%; width: 350px; height: 400px; position: absolute" map="Stage05" static></MapChanger>
	
	<Player style="left: 80px; top: 200px"></Player>
	
	<!-- Danger -->
	<MapChanger class="danger" style="
		top: 0; left: 480px;
		width: 50px; height: 700px;
		position: absolute;
	" map="Stage04" static></MapChanger>
	
	<MapChanger class="danger" style="
		top: 0; left: 680px;
		width: 200px; height: 300px;
		position: absolute;
	" map="Stage04" static></MapChanger>
	
	<MapChanger class="danger" style="
		top: 50%; left: 680px;
		width: 200px; height: 300px;
		position: absolute;
	" map="Stage04" static></MapChanger>
	
	<MapChanger class="danger" style="
		top: 49%; left: 1180px;
		width: 200px; height: 100px;
		position: absolute;
		transform: rotateZ(-36deg);
	" map="Stage04" static></MapChanger>
	
	<!-- Bottom wall -->
	<Actor class="wall" style="
    	top: 70%;
    	width: 100%; height: 50%;
    	transform: rotateZ(0deg);
    " static></Actor>

	<!-- Left wall -->
	<Actor class="wall" style="
    	top: -10px; left: -30px;
    	width: 190px; height: 110%; 
    	transform: rotateZ(-6deg);
    " static></Actor>
	<!-- Right wall -->
	<Actor class="wall" style="
    	top: -30px; right: -140px; 
    	width: 300px; height: 100%;
    	transform: rotateZ(3deg);
    " static></Actor>
	<!-- Hidden top wall -->
    <Actor class="wall" style="
        top: -50px;
        width: 100%; height: 50px;
    " static></Actor>
	
	<!-- Obstacle -->
	<Actor class="wall" style="
        top: 40%; left: 7%; 
        width: 300px; height: 50%;
    " static></Actor>
	
	<!-- Ramp -->
    <Actor class="wall" style="
        top: 47%; left: 57%; 
        width: 700px; height: 50%;
        transform: rotateZ(-36deg);
    " static></Actor>
	
	<!-- Danger text -->
    <div style="
        flex-direction: column; 
        
        position: absolute; 
        
        top: 21%; left: -670px; 
        
        width: 100%; height: 80%;
    ">
        <div class="text" style="font-size: 25px">
            Can you get through?
        </div>
    </div>
</root>
