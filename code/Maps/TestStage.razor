@namespace Platformer.Maps
@using Platformer.Core
@inherits Map

<style>
	TestStage {
		width: 100%; height: 100%;
	
		position: absolute;
    	
		background: linear-gradient(180deg, rgba(240,179,133,1) 0%, rgba(255,206,109,1) 6%, rgba(237,209,179,1) 31%, rgba(204,196,193,1) 48%, rgba(149,165,188,1) 93%);
    	
    	.wall {
			background-color: #262622;
			position: absolute;
			
			&.floor {
				top: 70%;
				width: 100%; height: 50%;
			}
			
			&.block {
				top: 55%;
				width: 500px; height: 200px;
			 
				transform: rotateZ(30deg);
			}
		
			&.platform {
				top: 45%; left: 40%;
				width: 300px; height: 50px;
			}	
		}

		MapChanger {
			background-color: #FF822D;
            									
			width: 100px; height: 100px;
			
			position: absolute;
			
			border-radius: 5px;
		}
		
		.text {
			font-family: Inter;
			font-weight: bold;
			font-size: 30px;
		
			color: #262622;
		
			justify-content: center;
			align-items: center;
		
			&.heading {
				font-size: 40px;	
			}
		}
    }
</style>

<root>
	<Actor class="wall floor" static></Actor>
	<Actor class="wall block" static></Actor>
	<Actor class="wall platform" static></Actor>
	
	<MapChanger style="top: 50%; left: 50%; position: absolute" map="TestStage"></MapChanger>
	
	<Player style="left: 250px; top: 250px"></Player>
	
	<div style="flex-direction: column; position: absolute; top: 20%; width: 100%; height: 80%">
		<div class="text heading">Thanks for trying this out!</div>
		<div class="text">
			Hold
			<Glyph input="jump" style="font-size: 39px; padding: 7px"></Glyph>
			to super jump
		</div>
		<div class="text">
        	Press
        	<Glyph input="reload" style="font-size: 39px; padding: 7px"></Glyph>
        	to reset
        </div>
	</div>
</root>
