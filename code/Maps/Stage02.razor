@namespace Platformer.Maps
@using Platformer.Core
@using Sandbox.UI
@inherits Map
@attribute [StyleSheet( "/Maps/Stage02.scss" )]

<root>
	<MapChanger style="top: 656px; left: 83%; position: absolute" map="Stage03" static></MapChanger>
	
	<Player style="left: 250px; top: 450px"></Player>
	
	<!-- Danger -->
	<MapChanger class="danger" style="
		top: 706px; left: 680px;
		width: 700px; height: 50px;
		position: absolute;
	" map="Stage02" static></MapChanger>
	
	<!-- Bottom wall -->
	<Actor class="wall" style="
    	top: 70%;
    	width: 100%; height: 50%;
    	transform: rotateZ(0deg);
    " static></Actor>
	<!-- Left wall -->
	<Actor class="wall" style="
    	top: -10px; left: -30px;
    	width: 190px; height: 100%; 
    	transform: rotateZ(3deg);
    " static></Actor>
	<!-- Right wall -->
	<Actor class="wall" style="
    	top: -30px; right: -140px; 
    	width: 300px; height: 100%;
    	transform: rotateZ(3deg);
    " static></Actor>
	
	<!-- Obstacle -->
	<Actor class="wall" style="
        top: 40%; left: 20%; 
        width: 300px; height: 50%;
    " static></Actor>
	
	<!-- Obstacle2 -->
    <Actor class="wall" style="
        top: 40%; left: 70%; 
        width: 200px; height: 50%;
    " static></Actor>
	
	<!-- Danger text -->
    <div style="
    	flex-direction: column; 
    	
    	position: absolute; 
    	
    	top: 45%; left: 60px; 
    	
    	width: 100%; height: 80%;
    ">
        <div class="text" style="font-size: 25px">
        	This is tricky - avoid the danger!
        </div>
    </div>
</root>
