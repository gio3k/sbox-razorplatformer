@namespace Platformer.Maps
@using Platformer.Core
@using Sandbox.UI
@inherits Map
@attribute [StyleSheet( "/Maps/Stage00.scss" )]

<root>
	<MapChanger style="top: 763px; left: 70%; position: absolute" map="Stage01" static></MapChanger>
    
	<Player style="left: 450px; top: 250px"></Player>
	
	<!-- Bottom wall -->
	<Actor class="wall" style="
		top: 80%; 
		width: 100%; height: 20%;
		transform: rotateZ(0deg);
	" static></Actor>
	<!-- Left wall -->
	<Actor class="wall" style="
		top: -10px; left: -30px;
		width: 190px; height: 100%; 
		transform: rotateZ(3deg);
	" static></Actor>
	<!-- Right wall -->
	<Actor class="wall" style="
		top: -30px; right: -150px; 
		width: 300px; height: 100%;
		transform: rotateZ(9deg);
	" static></Actor>

	<!-- Intro text -->
	<div style="flex-direction: column; position: absolute; top: 35%; left: -20%; width: 100%; height: 80%">
		<div class="text heading">Welcome to this platformer demo!</div>
		<div class="text">
			Press
			<Glyph input="reload" style="font-size: 39px; padding: 7px"></Glyph>
			to reset
		</div>
		<div class="text" style="font-size: 15px"> This design is really inspired by Sound Shapes - play that, it's good! </div>
		<div class="text" style="font-size: 15px"> This is a tech demo - you can check out the code on GitHub </div>
		<div class="text" style="font-size: 15px"> https://github.com/lotuspar/sbox-razorplatformer </div>
	</div>

	<!-- MapChanger text -->
	<div style="flex-direction: column; position: absolute; top: 700px; left: 430px; width: 100%; height: 80%">
		<div class="text">
			Just touch the orange square!
		</div>
	</div>
</root>
